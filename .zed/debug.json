[
  {
    "label": "Debug v -cc clang（GDB）",
    "adapter": "GDB",
    "mode": "debug",
    "request": "launch",
    "program": "main",
    "args": ["-f", "etc/config_dev.toml"],
    "cwd": "$ZED_WORKTREE_ROOT/backend",
    "subProcess": true,
    "redirectOutpot": true,
    "stop_on_entry": false,
    "initialize_args": {
      "console": "integratedTerminal"
      // "stopAtBeginningOfMainSubprogram": true
    },
    // "build": "v build -cc clang -g" // 从tasks.json添加构建任务
    "build": {
      "command": "v wipe-cache && v -cc clang -g -no-parallel  -o main .",
      "args": ["-f", "etc/config_dev.toml"]
    }
  }
]
